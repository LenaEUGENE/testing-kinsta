---
import Layout from '@layouts/Layout.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon';

//import components
import Main from '@components/Main.astro';
import ServiceCard from '@components/ServiceCard.astro';
import Button from '@components/Button.astro';
import Link from '@components/Link.astro';
import ChecklistItem from '@components/ChecklistItem.astro';

---

<Layout title="Mon corps libéré | massage">

    <Main class="flex-1">
        <!-- Hero massage -->
        <section class="section relative mt-36 overflow-hidden">
            <div class="container">
            <div class="max-w-5xl text-center mx-auto">
                <h1 class="headline headline-h1">Sophrologie <br>
                    harmoniser corps et conscience</h1>
                <p class="">Une synthèse de la méditation, du yoga, de la relaxation et de la psychologie.

                </p>
            </div>
        
            <div class="mt-10 relative max-w-5xl mx-auto">
                <div class="w-full object-cover h-96 sm:h-[30rem] md:h-[32rem] bg-[url('../images/sophrologie_4.jpg')] bg-no-repeat bg-center bg-cover rounded-xl"></div>
            </div>
            </div>
        </section>

            <!-- Features sophrologie -->
            <section class="section bg-dark">
                <div class="container">
                    <div class="Services__grid--wrapper flex justify-center">
                        <ul class="grid grid-cols-[repeat(auto-fill,minmax(20rem,1fr))] md:grid-cols-3 gap-4 md::gap-6 xl:gap-8 p-2">
                            <ServiceCard
                                title='Respiration'
                                description="Elle est un outil fondamental de transformation."
                            />
                            <ServiceCard
                                title='SDN'
                                description="Sophro-déplaçant-du-négatif. Évacue la négativité accumulée."
                            />
                            <ServiceCard
                                title='Relaxation dynamique'
                                description="Puissant levier pour la vivance de phénomènes en toute sécurité."
                            />
                            
                        </ul>
                    </div>
                </div>
            </section>

            <!-- services -->
            <section class="section bg-brand-500/20">
                <div class="container">
                    <div class="sectionTitle w-full mx-auto max-w-prose space-y-4 text-center pb-12 lg:pb-16">
                        <div class="groupTitle space-y-1">
                            <span class="tagline">Améliorer votre qualité de vie au quotidien</span>
                            <h2 class="headline headline-h2">Notre offre d'expérience en sophrologie</h2>
                        </div>
                        <div class="subheadline-wrapper w-full">
                            <p class="sub__headline text-base">
                                La prestation offerte est une séance de sophrologie donnée à domicile.
                            </p>
                        </div>
                    </div>
                    
                    <!-- offre sophrologie individuelle -->
                    <div class="services grid gap-14 mb-8 md:mb-10 lg:mb-12 xl:mb-14 2xl:mb-16">
                        <div class="lg:grid lg:grid-cols-2 lg:items-center lg:gap-12 xl:gap:16">
                            
                            <div class="flex md:justify-center">
                                <Image
                                    class="rounded-2xl shadow-lg aspect-video lg:aspect-square object-cover"
                                    width={576}
                                    height={576}
                                    src="/images/home/sophrologie_1.jpg"
                                    alt="Image Description"
                                >
                            </div>
                            
                        
                            <div class="mt-5 sm:mt-10 lg:mt-0">
                                <div class="space-y-6 sm:space-y-8">
                                <!-- Title -->
                                <div class="space-y-2 md:space-y-4">
                                    <h3 class="headline headline-h3">
                                        Sophrologie individuelle
                                    </h3>
                                    <p>
                                        Une séance conviendra à toute personne qui recherche un peu plus de paix, d’harmonie, de prise de conscience, de lâcher prise. Pour toute personne désireuse de s’investir dans l’atteinte de ses objectifs
                                        la sophrologie permet la vivance, sans tension et en pleine conscience, de tout phénomène qui se présente à elle. Elle permet donc de se défaire de toute charge émotionnelle négative associée.
                                    </p>
                                </div>
                        
                                <!-- List -->
                                <ul role="list" class="space-y-2 sm:space-y-4">
                                    <ChecklistItem
                                        label='Renforce la confiance en soi'
                                    />
                                    <ChecklistItem
                                        label='Diminue le stress'
                                    />
                                    <ChecklistItem
                                        label='Aide au développement personnel'
                                    />
                                    <ChecklistItem
                                        label='Facilite le sommeil'
                                    />
                        
                                </ul>
                                <!-- End List -->
                                </div>
                                <br>
                                <p>Si vous souhaitez participer à une session de sophrologie choisissez le forfait COROSSOL pour 60 minutes au tarif de 60€.</p>
                                <br>
                                <Link
                                    role='link'
                                    label="Voir tous les tarifs"
                                    href= "/#tarifs-individuel"
                                    icon={{
                                    name:'arrow-right',
                                    side: 'right'
                                    }}
                                    classes='link'
                                />
                            </div>
                        </div>
                    </div>

                    <div class="stepsgoals-wrapper w-full flex flex-col lg:flex-row gap-6 justify-center">
                        <article class="goals lg:w-1/3 rounded-xl bg-dark text-offwhite p-6 lg:p-8 space-y-6">
                            <div class="goals__header">
                                <h4 class="headline headline-h4 text-offwhite">Objectifs</h4>
                                <p>Activer votre potentiel</p>
                            </div>
                            <!-- List -->
                            <ul role="list" class="space-y-2 sm:space-y-4">
                                <ChecklistItem
                                    label='Prende conscience de son corps'
                                />
                                <ChecklistItem
                                    label='Accepter le positif'
                                />
                                <ChecklistItem
                                    label='Éliminer les tension'
                                />
                            </ul>
                            <!-- End List -->
                        </article>
                        <article class="steps lg:w-2/3 max-w-5xl rounded-xl bg-dark text-offwhite p-6 lg:p-8 space-y-6">
                            <div class="steps__header">
                                <h4 class="headline headline-h4 text-offwhite">Une séance en 7 étapes</h4>
                                <p>Activer votre potentiel</p>
                            </div>
                            <ol class="list-decimal list-inside space-y-1 sm:columns-2">
                                <li>Accueil et le motif de la visite</li>
                                <li>Brève explication de la séance et des protocoles</li>
                                <li>Relaxation dynamique pour amener, graduellement, un grand niveau de détente </li>
                                <li>Approfondissement de la détente pour amener la personne à un niveau sophro-liminal (entre veille et sommeil) espace de potentialité</li>
                                <li>Chacun peut puiser ce qui lui est nécessaire ici et maintenant</li>
                                <li>Retour sur le vécu de la séance</li>
                                <li>Sortie graduelle de la séance</li>
                            </ol>
                        </article>
                    </div>

                    <!-- offre sophrologie en groupe -->
                    <div class="services grid gap-14 mt-8 md:mt-10 lg:mt-12 xl:mb-14 2xl:mb-16">     
                        <div class="grid lg:grid-cols-2 lg:items-center lg:gap-12 xl:gap:16">                    
                            <div class="mt-5 sm:mt-10 lg:mt-0 order-2 lg:order-1 ">
                                <div class="space-y-6 sm:space-y-8 mb-6 md:mb-8">
                                    <!-- Title -->
                                    <div class="space-y-2 md:space-y-4">
                                        <h3 class="headline headline-h3">
                                            Sophrologie en groupe
                                        </h3>
                                        <p>
                                            La sophrologie se pratique également en groupe. Néanmoins chaque participant peut profiter pleinement et à son rythme des bienfaits de sa séance.
                                        </p>
                                    </div>
                            
                                    <!-- List -->
                                    <ul role="list" class="space-y-2 sm:space-y-4">
                                        <ChecklistItem
                                            label='Renforce la motivation'
                                        />
                                        <ChecklistItem
                                            label='Renforce les liens déjà existants ou développe la sociabilité'
                                        />
                                        <ChecklistItem
                                            label='Énergisant'
                                        />
                                        <ChecklistItem
                                            label='Intéressant'
                                        />
                            
                                    </ul>
                                    <!-- End List -->

                                    <!-- Audio -->
                                    <article class="bg-brand_100 p-8 rounded-3xl text-offblack">
                                        <div class="sm:flex">
                                            <div class="mb-4 flex-shrink-0 sm:mb-0 sm:mr-4">
                                                <Image
                                                    class="hidden md:block h-16 w-16 rounded-full object-cover object-left-top bg-center"
                                                    format='webp'
                                                    src="/images/presentation/jp_portrait_2.jpg"
                                                    width={256}
                                                    height={256}
                                                    alt="Jean-Philippe"
                                                />
                                            </div>
                                            <div>
                                            <h4 class="text-lg font-medium">
                                                La sophrologie
                                            </h4>
                                            <p class="mt-1">
                                            Pourquoi pratiquer la sophrologie en groupe?
                                            </p>
                                            <p class="mt-2">
                                                Voici quelques bonnes raisons de pratiquer la sophrologie à plusieurs.
                                            </p>
                                            </div>
                                        </div>
                            
                                        <div class=" mt-8">
                                            <audio controls class="w-full">
                                            <source
                                                src="src/assets/sophrologie-avantages-du-groupe.mp3"
                                                type="audio/mpeg"
                                            />
                                            </audio>
                                        </div>
                                    </article>

                                    <p>Si vous souhaitez partager une expérience commune avec des membres de votre famille ou des amis, réservez une séance collective avec le forfait Quenette. Le forfait QUENETTE c’est une séance de 3 à 8 personnes au tarif de 30€/personne (tarif applicable au groupe uniquement).</p>
                                </div>
                                <Link
                                    role='link'
                                    label="Voir tous les tarifs"
                                    href= "/#tarifs-individuel"
                                    icon={{
                                    name:'arrow-right',
                                    side: 'right'
                                    }}
                                    classes='link'
                                />
                            </div>
                            <div class="flex md:justify-center order-1 lg:order-2">
                                <Image
                                    class="rounded-2xl shadow-lg aspect-video lg:aspect-square object-cover"
                                    width={576}
                                    height={576}
                                    src="/images/entreprise/sophrologie_5.jpg"
                                    alt="Image Description"
                                >
                            </div>
                            
                        </div>
                    </div>
                </div>			
            </section>
       
        <!-- CTA -->
        <section class="section bg-brand">
            <div class="container">
                <div
                    class="relative z-10 overflow-hidden rounded-2xl bg-offwhite shadow-lg shadow-dark/20 px-8 md:p-[70px]"
                >
                    <div class="-mx-4 flex flex-wrap items-center">
                        <div class="sectionTitle w-full mx-auto max-w-prose space-y-4 text-left pb-12 lg:pb-16 lg:w-1/2">
                            <div class="groupTitle space-y-1">
                                <span class="tagline"></span>
                                <h2 class="headline headline-h2">MCL se propose de vous relaxer</h2>
                            </div>
                            <div class="subheadline-wrapper w-full">
                                <p class="sub__headline text-base">Pour cela, il vous suffit de nous contacter afin d'obtenir réponse à vos questions et de prendre rendez-vous.</p>
                            </div>
                        </div>
                    <div class="w-full px-4 lg:w-1/2">
                        <div class="flex flex-wrap lg:justify-end gap-6">
                            <Button 
                                type='button'
                                role="link"
                                href='tel:+596 6 96 09 08 77'
                                label='Nous téléphoner'
                                icon={{
                                    name:"phone-call",
                                    side:"right"
                                }}
                                classes={'isFilled'}
                            />
                        </div>
                    </div>
                    </div>
            
                    <div>
                    <span class="absolute top-0 left-0 z-[-1]">
                        <svg
                        width="189"
                        height="162"
                        viewBox="0 0 189 162"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                        >
                        <ellipse
                            cx="16"
                            cy="-16.5"
                            rx="173"
                            ry="178.5"
                            transform="rotate(180 16 -16.5)"
                            fill="url(#paint0_linear)"
                        />
                        <defs>
                            <linearGradient
                            id="paint0_linear"
                            x1="-157"
                            y1="-107.754"
                            x2="98.5011"
                            y2="-106.425"
                            gradientUnits="userSpaceOnUse"
                            >
                            <stop stop-color="white" stop-opacity="0.07" />
                            <stop offset="1" stop-color="white" stop-opacity="0" />
                            </linearGradient>
                        </defs>
                        </svg>
                    </span>
                    <span class="absolute bottom-0 right-0 z-[-1]">
                        <svg
                        width="191"
                        height="208"
                        viewBox="0 0 191 208"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                        >
                        <ellipse
                            cx="173"
                            cy="178.5"
                            rx="173"
                            ry="178.5"
                            fill="url(#paint0_linear)"
                        />
                        <defs>
                            <linearGradient
                            id="paint0_linear"
                            x1="-3.27832e-05"
                            y1="87.2457"
                            x2="255.501"
                            y2="88.5747"
                            gradientUnits="userSpaceOnUse"
                            >
                            <stop stop-color="white" stop-opacity="0.07" />
                            <stop offset="1" stop-color="white" stop-opacity="0" />
                            </linearGradient>
                        </defs>
                        </svg>
                    </span>
                    </div>
                </div>
            </div>
        </section>
    </Main>

</Layout>